{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nacho Time",
  "version": "1.1.0",
  "identifier": "com.github.nacho-time",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",

        "center": true,
        "dragDropEnabled": false,
        "resizable": true,
        "maximized": true,
        "visible": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$CACHE/**"],
          "deny": []
        }
      },
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nacho-time"]
      },
      "mobile": [
        {
          "scheme": ["nacho-time"],
          "appLink": false
        }
      ]
    }
  }
}
